<div class="tax-toggle">
  <div class="form-check-reverse form-switch">
    <input
      class="form-check-input"
      type="checkbox"
      role="switch"
      id="switchCheckDefault"
    />
    <label class="form-check-label" for="switchCheckDefault"
      >Display total after taxes</label
    >
  </div>
</div>
<% let flag = false; %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <%for(let listing of allListing) { if(listing.category === category ) { %> <%
  flag = true; %>
  <a href="/listing/<%=listing._id%>" class="listing-links">
    <div class="card col listing-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%> </b> <br />
          &#8360; <%= listing.price.toLocaleString("en-IN")%> / nights
          <i class="tax-info">&nbsp;&nbsp;+13% GST</i>
        </p>
      </div>
    </div>
  </a>
  <%}}%>
</div>
<% if (!flag) { %>
<div class="not-found">
  <div class="info">NO <b>AWASLY</b> PRESENT ON THIS CATEGORY!!</div>
  <div class="goto-Page">
    <button type="button" class="btn btn-danger">
      <a href="/listing">Go Back to Home Page</a>
    </button>
  </div>
</div>
<% } %>

<script src="/js/taxSwitch.js"></script>
